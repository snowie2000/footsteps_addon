{
  "format_version": "1.17.41",
  "particle_effect": {
    "description": {
      "identifier": "footsteps:trail_dot",
      "basic_render_parameters": {
        "material": "particles_add",
        "texture": "textures/particle/particle"
      }
    },
    "components": {
      "minecraft:emitter_initialization": {
        "creation_expression": "v.max_life = variable.lifetime > 0 ? variable.lifetime : 10.0;"
      },
      "minecraft:particle_initialization": {
        "creation_expression": "v.particle_lifetime = v.max_life;"
      },
      "minecraft:particle_initial_spin": {
        "rotation": "variable.rot"
      },
      "minecraft:emitter_lifetime_once": {
        "active_time": 0.1
      },
      "minecraft:emitter_rate_instant": {
        "num_particles": 1
      },
      "minecraft:particle_initial_speed": 0,
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "v.max_life"
      },
      "minecraft:particle_appearance_billboard": {
        "size": [
          0.1,
          0.1
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 16,
          "texture_height": 16,
          "uv": [
            0,
            0
          ],
          "uv_size": [
            16,
            16
          ]
        }
      },
      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "v.particle_age / v.particle_lifetime",
          "gradient": {
            "0.0": [
              "variable.color.r",
              "variable.color.g",
              "variable.color.b",
              1.0
            ],
            "0.7": [
              "variable.color.r",
              "variable.color.g",
              "variable.color.b",
              1.0
            ],
            "1.0": [
              "variable.color.r",
              "variable.color.g",
              "variable.color.b",
              0.0
            ]
          }
        }
      },
      "minecraft:particle_motion_dynamic": {}
    }
  }
}